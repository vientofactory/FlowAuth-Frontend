{
	"name": "frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --write . && eslint . --fix",
		"analyze": "npm run build && npx vite-bundle-analyzer .svelte-kit/output/client/_app/immutable",
		"preview:build": "npm run build && npm run preview",
		"validate": "npm run lint && npm run check && npm run test:run",
		"start": "npm run dev"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.18.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.3.3",
		"@types/nprogress": "^0.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"nprogress": "^0.2.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.7.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@flowauth/shared": "file:../shared",
		"@fontsource/pretendard": "^5.2.5",
		"@fortawesome/fontawesome-free": "^7.0.1",
		"@fortawesome/fontawesome-svg-core": "^7.1.0",
		"@fortawesome/free-brands-svg-icons": "^7.1.0",
		"@fortawesome/free-solid-svg-icons": "^7.1.0",
		"@fortawesome/svelte-fontawesome": "^0.2.4",
		"@sveltejs/adapter-node": "^5.3.2",
		"chart.js": "^4.5.0",
		"date-fns": "^4.1.0",
		"recaptcha-v3": "^1.11.3"
	},
	"overrides": {
		"cookie": "^1.0.0"
	}
}
