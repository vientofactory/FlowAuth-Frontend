{
	"name": "frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --write . && eslint .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"analyze": "npm run build && npx vite-bundle-analyzer .svelte-kit/output/client/_app/immutable",
		"preview:build": "npm run build && npm run preview",
		"validate": "npm run lint && npm run check && npm run test:run",
		"start": "npm run dev"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@storybook/addon-a11y": "^9.1.7",
		"@storybook/addon-docs": "^9.1.7",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"@storybook/addon-vitest": "^9.1.7",
		"@storybook/sveltekit": "^9.1.7",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.3.3",
		"@vitest/browser": "3.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.1.7",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"happy-dom": "^20.0.0",
		"jsdom": "^27.0.0",
		"playwright": "^1.55.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^9.1.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@flowauth/shared": "file:../shared",
		"@fortawesome/fontawesome-free": "^7.0.1",
		"@sveltejs/adapter-node": "^5.3.2",
		"chart.js": "^4.5.0",
		"date-fns": "^4.1.0",
		"recaptcha-v3": "^1.11.3"
	}
}
